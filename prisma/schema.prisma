generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Cooperado {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   // Ex: 'usuario'
  cpf       String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  validated Boolean  @default(false)  // Indica se o usuário foi validado pelo Admin
  comercialId String @default("") // Id do Comercial que criou o usuário
  comercial Comercial? @relation(fields: [comercialId], references: [id])
}


model Admin {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   // Ex: 'admin'
  cpf       String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isAdmin   Boolean  @default(true)
}


model Comercial {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   // Ex: 'comercial'
  cpf       String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  validated Boolean  @default(true)
  cooperados   Cooperado[]
}
